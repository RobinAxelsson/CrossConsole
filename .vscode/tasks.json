// .vscode/tasks.json
{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Custom Build",
      "type": "shell",
      "command": "powershell",
      "args": [
        "-NoProfile",
        "-ExecutionPolicy",
        "Bypass",
        "-File",
        "${workspaceFolder}\\tools\\build.ps1"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": []
    },
    {
      "label": "Run",
      "type": "shell",
      "command": "${workspaceFolder}\\tools\\run.ps1",
      "group": {
        "kind": "test",
        "isDefault": true
      },
      "dependsOn": "Custom Build",
      "presentation": {
        "reveal": "always",
        "panel": "shared"
      },
      "problemMatcher": []
    }
  ]
}
